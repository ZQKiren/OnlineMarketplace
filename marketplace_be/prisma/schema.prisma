model LoyaltyTransaction {
  id          String                    @id @default(uuid())
  userId      String
  orderId     String?
  type        LoyaltyTransactionType
  status      LoyaltyTransactionStatus  @default(COMPLETED)
  points      Int                       
  description String
  metadata    Json?
  expiresAt   DateTime?                 
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt

  user        User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  order       Order?                    @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([expiresAt]) 
  @@index([createdAt])
  @@map("loyalty_transactions")
}

model LoyaltyRedemption {
  id          String    @id @default(uuid())
  title       String
  description String
  pointsCost  Int
  discountType String   
  discountValue Float?
  minOrderValue Float?
  maxUses     Int?
  usageCount  Int       @default(0)
  isActive    Boolean   @default(true)
  validFrom   DateTime  @default(now())
  validUntil  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userRedemptions UserLoyaltyRedemption[]

  @@index([isActive])
  @@index([pointsCost])
  @@index([validFrom, validUntil]) 
  @@map("loyalty_redemptions")
}

model UserLoyaltyRedemption {
  id            String           @id @default(uuid())
  userId        String
  redemptionId  String
  orderId       String?
  pointsUsed    Int
  discountApplied Float
  usedAt        DateTime         @default(now())

  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  redemption    LoyaltyRedemption @relation(fields: [redemptionId], references: [id], onDelete: Cascade)
  order         Order?           @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([redemptionId])
  @@index([usedAt])
  @@map("user_loyalty_redemptions")
}